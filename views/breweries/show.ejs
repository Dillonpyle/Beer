<% include ../partials/head %>
<body>
<% include ../partials/header %>

<h1><%= brewery.name %></h1>

<main>
	<%= brewery.city %>, <%= brewery.state %><br>
	Created by: <a href="/users/<%= user._id %>"><%= user.username %></a><br>
	<ul>
		<% for (let i = 0; i < brewery.beers.length; i++) { -%>
			<li><a href="/beers/<%= brewery.beers[i]._id %>"><%= brewery.beers[i].name %></a></li>
		<% } -%>
	</ul>
	<%if(currentUser){%>
		<button><a href="/breweries/<%=brewery._id%>/edit">Edit This Brewery</a></button>
	<%}%>
</main>

<% include ../partials/footer%>