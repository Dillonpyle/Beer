<% include ../partials/head %>
<body>
	<% include ../partials/header %>

	<main>
		<form action="/beers" method="POST">
			<input type="text" name="name" placeholder="Beer Name"><br>
			<input type="text" name="type" placeholder="type"><br>
			<div>
				<label for="price">Price</label>
				<input type="range" name="price" min="1" max="4"><br>
			</div>
			<label for="flavor">Taste Description</label><br>
			<textarea name="flavor"></textarea><br>
			<input type="text" name="color" placeholder="Color"><br><br>
			<select name="maker" id="breweries-option-new">
				<% for (let i = 0; i < breweries.length; i++) { -%>
					<option value="<%= breweries[i].name %>"><%= breweries[i].name %></option>
				<% } -%>
			</select><br>
			<p>Don't see your beer's brewery? Click <a href="/breweries/new">here</a>.</p><br>
			<input type="text" name="user" placeholder="Your User Name"><br>
			<button>New Beer</button>
		</form>
	</main>




<% include ../partials/footer%>