<% include ../partials/head %>
<% include ../partials/header %>

<div class="wrap">
	<h1><%=user.username%></h1>
	<div class="ejs-text">
		Username: <%=user.username%><br>
		Email: <%=user.email%><br>
		<%=user.city%>, <%=user.state%><br>
		Fridge: 
		<ul>
			<% for (let i = 0; i < user.fridge.length; i++){%>
				<li>
					<a href="/beers/<%=user.fridge[i]._id%>"><%=user.fridge[i].name%></a>
				</li>
			<%}%>
		</ul>

		<%if(currentUser) {%>

			<button><a href="/users/<%=user._id%>/edit">Edit Yourself</a></button>
			<form action="/users/<%=user._id%>?_method=DELETE" method="POST">
				<button>DELETE USER</button>
			</form>

		<%}%>
	</div>
</div>

<% include ../partials/footer%>